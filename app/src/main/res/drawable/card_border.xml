<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#170606" />
            <corners android:radius="20dp" /> <!-- Corner radius same as cardCornerRadius -->
        </shape>
    </item>
    <!-- Border -->
    <item >
        <shape android:shape="rectangle">
            <stroke
                android:width="6dp"
                android:color="#E10E0E" /> <!-- Your desired border color -->
            <corners android:radius="20dp" /> <!-- Corner radius same as cardCornerRadius -->
        </shape>
    </item>
</layer-list>
